{
	"extends": ["../.eslintrc.json", "plugin:prettier/recommended"],
	"ignorePatterns": ["!**/*", "jest.config.ts"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"prettier/prettier": "error"
			},
			"parserOptions": {
				"project": "cdk/tsconfig.json"
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {
				"prettier/prettier": "error"
			},
			"parserOptions": {
				"project": "cdk/tsconfig.json"
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {
				"prettier/prettier": "error"
			}
		}
	]
}
