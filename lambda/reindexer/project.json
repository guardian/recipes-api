{
	"name": "lambda-reindex",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "/src",
	"projectType": "application",
	"targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["zip -r ../reindex-lambda.zip *"],
        "cwd": "dist/lambda/reindexer"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "transpile"
        }
      ]
    },
		"transpile": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"defaultConfiguration": "production",
			"options": {
				"platform": "node",
        "external": ["@aws-sdk/*"],
				"outputPath": "dist/lambda/reindexer",
				"format": ["cjs"],
				"bundle": true,
				"main": "lambda/reindexer/src/main.ts",
				"tsConfig": "lambda/reindexer/tsconfig.app.json",
				"generatePackageJson": true,
        "thirdParty": true,
				"esbuildOptions": {
					"sourcemap": true,
					"outExtension": {
						".js": ".js"
					}
				}
			},
			"configurations": {
				"development": {},
				"production": {
          "minify": true,
					"esbuildOptions": {
						"sourcemap": false,
						"outExtension": {
							".js": ".js"
						}
					}
				}
			}
		},
		"serve": {
			"executor": "@nx/js:node",
			"defaultConfiguration": "development",
			"options": {
				"buildTarget": "lambda-reindex:build"
			},
			"configurations": {
				"development": {
					"buildTarget": "lambda-reindex:build:development"
				},
				"production": {
					"buildTarget": "lambda-reindex:build:production"
				}
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["lambda/reindexer/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "lambda/reindexer/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": []
}
