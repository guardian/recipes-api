{
	"extends": ["../../.eslintrc.json", "plugin:prettier/recommended"],
	"ignorePatterns": ["!**/*", "jest.config.ts"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"prettier/prettier": "error"
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"project": ["lambda/test-indexbuild/tsconfig.app.json"]
			},
			"rules": {
				"prettier/prettier": "error"
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {
				"prettier/prettier": "error"
			}
		}
	]
}
