{
	"extends": ["../../.eslintrc.json"],
	"ignorePatterns": ["!**/*", "jest.config.ts"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"project": ["lambda/test-indexbuild/tsconfig.app.json"]
			},
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {}
		}
	],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["lambda/test-indexbuild/tsconfig.app.json", "lambda/test-indexbuild/tsconfig.spec.json"]
      }
    }
  }
}
