{
  "name": "@recipes-api/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "update-cdk": "nx run cdk:update",
    "build": "nx run-many --target=build --skip-nx-cache",
    "test": "nx run-many --target=test",
    "lint": "nx run-many --target=lint"
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "axios": "^1.0.0",
    "date-fns": "^2.30.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "prettier": "@guardian/prettier",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "@guardian/eslint-config-typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": 0,
      "import/no-namespace": 2
    },
    "ignorePatterns": [
      "**/*.js",
      "node_modules",
      "cdk.out",
      ".eslintrc.js",
      "jest.config.js"
    ]
  },
  "devDependencies": {
    "@guardian/cdk": "52.0.0",
    "@guardian/eslint-config-typescript": "7.0.0",
    "@guardian/prettier": "5.0.0",
    "@guardian/tsconfig": "^0.2.0",
    "@nx/esbuild": "17.0.2",
    "@nx/eslint": "17.0.2",
    "@nx/eslint-plugin": "17.0.2",
    "@nx/jest": "17.0.2",
    "@nx/js": "17.0.2",
    "@nx/node": "17.0.2",
    "@nx/workspace": "17.0.2",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@types/jest": "^29.4.0",
    "@types/node": "~18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "aws-cdk": "2.100.0",
    "aws-cdk-lib": "2.100.0",
    "constructs": "10.3.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.4.1",
    "nx": "17.0.2",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.20",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  }
}
